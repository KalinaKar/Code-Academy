#include <stdio.h>

int main(int num){

    //тук давам стойност на числото, което ще преобразувам
    num = 400;
    
    /*Създавам маска от числото 0b 1111 1000,
    *за да получа единици на желаните позиции */
    int mask = 248;
    
    //обръщам битовете на маската с побитово отрицание
    mask = ~ mask;
    
    //прилагам побитов оператор И 
    num = num & mask;

    printf("%d\n", num);

    return 0;
}
