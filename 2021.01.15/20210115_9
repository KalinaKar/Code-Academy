#include <stdio.h>

void countPrintChars(char arr[]);

int main(){
    countPrintChars("Hi");
    countPrintChars("Hello World");
    return 0;
}

void countPrintChars(char arr[]){
    int i = 0;
    int c = 0;
    while(arr[i] != '\0'){
        c++;
        printf("%c", arr[i]);
        i++;
    }
    printf("\n%i\n", c);
}
