#include <stdio.h> 

int main(int num){

    //тук задаваме стойност на нашата променлива
    num = 0;
    //правим маска от 32-битово число с нули на четните позиции 
    int mask = 1431655765;
    //прилагаме побитов оператор AND
    num = num & mask;

    //принтираме новото число 
    printf("%d", num);

    return 0;
}
