#include <stdio.h>
#include <math.h>

int nullBit(int num, int i);

int main(){

    int num = 63;
    int i = 2;
    printf("%d", nullBit(num, i));

    return 0;
}

int nullBit(int num, int i) {

    //позицията на индекса съответсва на степен на двойката
    int mask = pow(2, i);
    //първо превръщам желания бит в сигурна единица
    num = num|mask;
    //след това двете 1 и 1 превръщам в 0
    num = num^mask;

    return num;
}
