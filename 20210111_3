#include <stdio.h>

int nullBit(int num, int i);

int main(){

    // задавам желаните параметри
    int num = 63;
    int i = 2;
    // принтирам новото число с изчистения бит
    printf("%d", nullBit(num, i));

    return 0;
}

int nullBit(int num, int i) {

    //създавам маска, с единица на индекс позицията 
    int mask = 1<<i;
    //първо превръщам желания бит в сигурна единица
    num = num|mask;
    //след това двете 1 и 1 превръщам в 0
    num = num^mask;

    return num;
}
