#include <stdio.h>

int main()
{
    //задавам стойност на параметрите
    int num, i;
    num = 0;
    i = 0;
    //създавам маска с единица на индекс позицията
    int mask = 1 << i;
    //обръщам стойността на желания бит в единица чрез XOR
    int res = num ^ mask;

    printf("%d", res);

    return 0;
}
